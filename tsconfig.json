{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "jsx": "preserve",
        "lib": [
            "dom",
            "es2017"
        ],
        "module": "esnext",
        "moduleResolution": "node",
        "noEmit": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "preserveConstEnums": true,
        "removeComments": false,
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "target": "esnext",
        "baseUrl": "./",
        "paths": {
            "@luma/lib/*": [ "lib/*" ],
            "@luma/components/*": [ "components/*" ],
            "@luma/containers/*": [ "containers/*" ],
            "@luma/hocs/*": [ "hocs/*"],
        },
    },
}